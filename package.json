{
  "name": "dev-box",
  "version": "1.1.2",
  "description": "Development sandbox environment with comprehensive testing",
  "scripts": {
    "lint": "npm run lint:js && npm run lint:py",
    "lint:js": "eslint . --ext .js,.jsx,.ts,.tsx --fix",
    "lint:py": "ruff check --fix .",
    "format": "npm run format:js && npm run format:py && npm run format:shell",
    "format:js": "prettier --write \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml,css,scss,html}\"",
    "format:py": "black . && ruff format .",
    "format:shell": "shfmt -w -s -i 2 **/*.sh",
    "style:check": "npm run lint && npm run format:check",
    "format:check": "prettier --check \"**/*.{js,jsx,ts,tsx,json,md,yaml,yml,css,scss,html}\" && black --check . && ruff format --check .",
    "pre-commit": "pre-commit run --all-files",
    "prepare": "echo 'Run: pip install pre-commit && pre-commit install to setup hooks'"
  },
  "devDependencies": {
    "@commitlint/cli": "^20.0.0",
    "@commitlint/config-conventional": "^20.0.0",
    "commitizen": "^4.3.1",
    "conventional-changelog-cli": "^5.0.0",
    "eslint": "^9.36.0",
    "eslint-config-prettier": "^10.1.8",
    "husky": "^9.1.7",
    "lint-staged": "^16.1.4",
    "prettier": "^3.6.2"
  },
  "keywords": [
    "development",
    "sandbox",
    "testing",
    "vagrant",
    "docker"
  ],
  "author": "Dev Box Team",
  "license": "MIT"
}
