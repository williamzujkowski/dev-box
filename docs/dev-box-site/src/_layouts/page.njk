---
layout: base.njk
---

<div class="page-layout">
    <div class="container">
        {% if eleventyNavigation or toc %}
        <aside class="sidebar" role="complementary">
            {% if eleventyNavigation %}
            <nav class="page-nav" aria-label="Page navigation">
                <h3 class="nav-title">Navigation</h3>
                {{ collections.all | eleventyNavigation | eleventyNavigationToHtml | safe }}
            </nav>
            {% endif %}
            
            {% if toc %}
            <div class="table-of-contents-wrapper">
                <h3 class="toc-title">On this page</h3>
                <div class="table-of-contents">
                    <!-- ToC will be generated by markdown-it-table-of-contents -->
                </div>
            </div>
            {% endif %}
        </aside>
        {% endif %}
        
        <div class="main-content">
            <article class="page-content">
                {% if title %}
                <header class="page-header">
                    <h1 class="page-title">{{ title }}</h1>
                    {% if description %}
                    <p class="page-description">{{ description }}</p>
                    {% endif %}
                    {% if date %}
                    <div class="page-meta">
                        <time datetime="{{ date | date('yyyy-MM-dd') }}">
                            {{ date | dateDisplay }}
                        </time>
                    </div>
                    {% endif %}
                </header>
                {% endif %}
                
                <div class="page-body">
                    {% if toc %}
                    [[toc]]
                    {% endif %}
                    
                    {{ content | safe }}
                </div>
                
                {% if tags and tags.length > 0 %}
                <footer class="page-footer">
                    <div class="page-tags">
                        <span class="tags-label">Tags:</span>
                        {% for tag in tags %}
                        {% if tag != "post" %}
                        <span class="tag">{{ tag }}</span>
                        {% endif %}
                        {% endfor %}
                    </div>
                </footer>
                {% endif %}
            </article>
            
            {% if pagination.href.next or pagination.href.previous %}
            <nav class="pagination" aria-label="Pagination">
                {% if pagination.href.previous %}
                <a href="{{ pagination.href.previous }}" class="pagination-link pagination-link--prev">
                    <span class="pagination-direction">Previous</span>
                    <span class="pagination-title">{{ pagination.previous.data.title }}</span>
                </a>
                {% endif %}
                
                {% if pagination.href.next %}
                <a href="{{ pagination.href.next }}" class="pagination-link pagination-link--next">
                    <span class="pagination-direction">Next</span>
                    <span class="pagination-title">{{ pagination.next.data.title }}</span>
                </a>
                {% endif %}
            </nav>
            {% endif %}
        </div>
    </div>
</div>