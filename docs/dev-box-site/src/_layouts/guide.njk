---
layout: page.njk
bodyClass: guide-page
toc: true
---

{{ content | safe }}

{% if relatedGuides %}
<section class="related-guides">
    <h2>Related Guides</h2>
    <div class="guide-grid">
        {% for guide in relatedGuides %}
        <article class="guide-card">
            <h3 class="guide-title">
                <a href="{{ guide.url }}">{{ guide.data.title }}</a>
            </h3>
            <p class="guide-excerpt">{{ guide.data.description or guide.content | excerpt }}</p>
            <div class="guide-meta">
                {% if guide.data.difficulty %}
                <span class="difficulty difficulty--{{ guide.data.difficulty }}">{{ guide.data.difficulty | capitalize }}</span>
                {% endif %}
                {% if guide.data.estimatedTime %}
                <span class="estimated-time">{{ guide.data.estimatedTime }}</span>
                {% endif %}
            </div>
        </article>
        {% endfor %}
    </div>
</section>
{% endif %}
