{
  "ci": {
    "collect": {
      "staticDistDir": "./docs",
      "url": [
        "http://localhost/index.html"
      ],
      "settings": {
        "chromeFlags": "--no-sandbox --disable-dev-shm-usage --disable-gpu",
        "preset": "desktop",
        "onlyCategories": ["accessibility", "best-practices", "performance", "seo"]
      }
    },
    "assert": {
      "preset": "lighthouse:recommended",
      "assertions": {
        "categories:accessibility": ["error", {"minScore": 0.90}],
        "categories:best-practices": ["error", {"minScore": 0.90}],
        "categories:performance": ["error", {"minScore": 0.85}],
        "categories:seo": ["warn", {"minScore": 0.90}],
        "audits:color-contrast": ["error", {"minScore": 1.0}],
        "audits:heading-order": ["error", {"minScore": 1.0}],
        "audits:html-has-lang": ["error", {"minScore": 1.0}],
        "audits:html-lang-valid": ["error", {"minScore": 1.0}],
        "audits:image-alt": ["error", {"minScore": 1.0}],
        "audits:label": ["error", {"minScore": 1.0}],
        "audits:link-name": ["error", {"minScore": 1.0}],
        "audits:list": ["error", {"minScore": 1.0}],
        "audits:listitem": ["error", {"minScore": 1.0}],
        "audits:meta-description": ["error", {"minScore": 1.0}],
        "audits:meta-viewport": ["error", {"minScore": 1.0}],
        "audits:document-title": ["error", {"minScore": 1.0}],
        "audits:focus-traps": ["error", {"minScore": 1.0}],
        "audits:focusable-controls": ["error", {"minScore": 1.0}],
        "audits:interactive-element-affordance": ["error", {"minScore": 1.0}],
        "audits:logical-tab-order": ["error", {"minScore": 1.0}],
        "audits:managed-focus": ["error", {"minScore": 1.0}],
        "audits:offscreen-content-hidden": ["error", {"minScore": 1.0}],
        "audits:use-landmarks": ["error", {"minScore": 1.0}],
        "audits:visual-order-follows-dom": ["error", {"minScore": 1.0}]
      }
    },
    "upload": {
      "target": "temporary-public-storage"
    }
  }
}